{{#each posts}}
<div class="post-preview">
    <a href="/post/{{id}}">
        <h2 class="post-title">
            {{title}}
        </h2>
        <h3 class="post-subtitle">
            {{content}}
        </h3>
    </a>
    <p class="post-meta">Posted by {{username}} on {{createdAt}}</p>
</div>
{{/each}}
